{% extends '@UnloopedGrid/column_types/_column.html.twig' %}

{% block column_content %}
    {% if type.value(data) %}
        {{ type.value(data)|format_datetime(type.options.date_format, type.options.time_format, locale=type.options.locale, timezone=type.options.timezone, pattern=type.options.format, calendar=type.options.calendar) }}
    {% endif %}
{% endblock %}
